@page
@model PaymentTypeModel
@{
    ViewData["Title"] = "Payment Options";
    ViewData["ActivePage"] = ManageNavPages.PaymentType;
}

<h2>@ViewData["Title"]</h2>

<hr />
<h4>Add Payment Type</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Description" class="control-label"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AccountNumber" class="control-label"></label>
                <input asp-for="Input.AccountNumber" class="form-control" />
                <span asp-validation-for="Input.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Payment Option" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        @if (Model.PaymentTypeCount > 0 && Model.PaymentTypeCount != null)
        {

            <h4>Current Payment Types</h4>

            @foreach (var item in Model.PaymentTypes)
            {
                <form asp-page-handler="delete" asp-route-id="@item.PaymentTypeId" method="post">
                    <label style="margin-right: 2rem">@item.Description</label>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            }
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}